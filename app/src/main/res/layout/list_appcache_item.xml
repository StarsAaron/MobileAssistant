<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/img_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="应用名称"
        android:id="@+id/tv_packagename"
        android:layout_alignTop="@+id/img_icon"
        android:layout_toEndOf="@+id/img_icon"
        android:singleLine="true"
        android:layout_marginRight="50dp"
        android:textColor="@color/color_text_black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="缓存大小："
        android:id="@+id/tv_cachesize"
        android:layout_alignBottom="@+id/img_icon"
        android:layout_alignStart="@+id/tv_packagename"
        android:singleLine="true"
        android:layout_marginRight="50dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imgbn_delete"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:background="@mipmap/icon_cleancache" />

</RelativeLayout>